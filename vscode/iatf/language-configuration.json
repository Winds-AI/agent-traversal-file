{
  "comments": {
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    {"open": "{", "close": "}"},
    {"open": "[", "close": "]"},
    {"open": "(", "close": ")"},
    {"open": "\"", "close": "\""},
    {"open": "'", "close": "'"},
    {"open": "`", "close": "`"}
  ],
  "surroundingPairs": [
    {"open": "{", "close": "}"},
    {"open": "[", "close": "]"},
    {"open": "(", "close": ")"},
    {"open": "\"", "close": "\""},
    {"open": "'", "close": "'"},
    {"open": "`", "close": "`"}
  ],
  "folding": {
    "markers": {
      "start": "^\\{#[A-Za-z][\\w-]{0,63}\\}$",
      "end": "^\\{\\/[A-Za-z][\\w-]{0,63}\\}$"
    }
  }
}
