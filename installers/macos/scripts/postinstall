#!/bin/bash
# Post-installation script for IATF Tools

# Make sure binary is executable
chmod +x /usr/local/bin/iatf

# Verify installation
if [ -x "/usr/local/bin/iatf" ]; then
    echo "IATF Tools installed successfully"
    /usr/local/bin/iatf --version
else
    echo "Warning: Installation may not have completed correctly"
    exit 1
fi

exit 0








